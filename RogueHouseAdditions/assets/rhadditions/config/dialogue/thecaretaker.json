        {
            "code": "welcomeback",
            "owner": "trader",
            "type": "talk",
            "text": [
                { "value": "Good to see you, {playername}." }
            ]
        },
        {
            "code": "main",
            "owner": "player",
            "type": "talk",
            "text": [
                {
                    "value": "What do you have for trade?",
                    "jumpTo": "opentrade"
                },
                {
                    "value": "Hospitium?",
                    "conditions": [
                        {
                            "variable": "entity.shelter",
                            "isNotValue": "true"
                        }
